{
  "name": "hash-worker",
  "version": "0.0.1",
  "description": "hash-worker is a tool for quickly calculating file hash",
  "author": "https://github.com/Tkunl",
  "repository": "https://github.com/Tkunl/hash-worker",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./global": {
      "require": "./dist/global.js",
      "import": "./dist/global.js",
      "types": "./dist/global.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup --config rollup.config.ts --configPlugin swc3 --watch",
    "build": "rollup --config rollup.config.ts --configPlugin swc3",
    "test:windows": "pnpm rm-ava-cache && c8 -r=lcov ava __tests__/*.spec.ts && start coverage/lcov-report/index.html",
    "rm:windows": "if exist dist rmdir /s/q output",
    "rm-ava-cache": "rimraf ./node_modules/.cache/ava"
  },
  "keywords": [
    "hash-worker",
    "hash"
  ],
  "license": "MIT",
  "dependencies": {
    "crc-32": "^1.2.2",
    "hash-wasm": "^4.11.0"
  },
  "ava": {
    "files": [
      "**/__tests__/*.spec.ts",
      "e2e/**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "tsx/cjs"
    ]
  }
}
